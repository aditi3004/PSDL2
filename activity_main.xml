<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/font_size"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="50dp"
        android:dropDownWidth="match_parent"
        android:entries="@array/font_size"
        app:layout_constraintBottom_toTopOf="@+id/font_color"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp" />

    <Spinner
        android:id="@+id/font_color"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:dropDownWidth="match_parent"
        android:entries="@array/font_color"
        app:layout_constraintBottom_toTopOf="@+id/font_size"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp" />

    <Spinner
        android:id="@+id/font_style"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="50dp"
        android:dropDownWidth="match_parent"
        android:entries="@array/font_style"
        app:layout_constraintBottom_toTopOf="@+id/font_color"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="160dp"
        android:text="Enter"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/font_color"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="55dp" />

</androidx.constraintlayout.widget.ConstraintLayout>